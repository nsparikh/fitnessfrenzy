<%= form_for(@new_tracker, class: "tracker-form") do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<%= f.text_field :title, placeholder: "Title", class: "input-field required", maxlength: "30" %>
	<%= f.text_field :units, placeholder: "Distance Units (i.e. miles)", class: "short-input-field required" %>
	<%= f.text_field :aux_units, placeholder: "Time Units (i.e. minutes)", class: "short-input-field pull-right required" %>
	<%= f.text_field :goal, placeholder: "Distance Goal", class: "short-input-field", onkeypress: "return isNumberKey(event)"  %>
	<%= f.text_field :aux_goal, placeholder: "Time Goal", class: "short-input-field pull-right", onkeypress: "return isNumberKey(event)"  %>
	<table>
		<tr>
			<td class="vert-center"><%= f.label :start_date %></td>
			<td class="date-field"><%= f.date_field :start_date, placeholder: "Start date", class: "input-field" %></td>
		</tr>
		<tr>
			<td class="vert-center"><%= f.label :end_date %></td>
			<td class="date-field"><%= f.date_field :end_date, placeholder: "End date", class: "input-field" %></td>
		</tr>
	</table>
	<%= f.hidden_field :category, :value => "distance" %>
	<div class="center-container"><%= f.submit "Create", class: "button tracker-form-button" %></div>
<% end %>