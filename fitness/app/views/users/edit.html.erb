<% provide(:title, 'Edit User') %>
<div class="sign-page-container">
	<div class="sign-form-container white-transparent-form">
		<h2 class="center">Update your profile</h2>

		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages', object: f.object %>

			<%= f.label :name %>
			<%= f.text_field :name, class: "input-field" %><br/>

			<%= f.label :email %>
			<%= f.text_field :email, class: "input-field" %><br/>

			<%= f.label :password %>
			<%= f.password_field :password, class: "input-field" %><br/>

			<%= f.label :password_confirmation, "Confirmation" %>
			<%= f.password_field :password_confirmation, class: "input-field" %><br/>

			<%= f.submit "Save changes", class: "button sign-submit-button" %>

		<% end %>
	</div>

</div>