<% provide(:title, 'Sign In') %>
<div class="sign-page-container">
	<div class="sign-form-container white-transparent-form">
		<h2 class="center">Sign In</h2>

		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email, class: "input-field" %>

			<%= f.label :password %>
			<%= f.password_field :password, class: "input-field" %>

			<%= f.submit "Sign in", class: "button sign-submit-button" %>

		<% end %>

		<!-- TODO: add "remember me" checkbox? -->

		<p>New user? <%= link_to "Sign up now!", signup_path %></p>
	</div>
</div>